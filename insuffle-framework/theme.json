{
  "$schema": "https://schemas.wp.org/wp/6.4/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "layout": {
      "contentSize": "1280px",
      "wideSize": "1536px"
    },
    "color": {
      "custom": true,
      "customDuotone": true,
      "customGradient": true,
      "defaultGradients": false,
      "defaultPalette": false,
      "link": true,
      "palette": [
        {
          "slug": "primary",
          "color": "#1f3a8b",
          "name": "Primaire"
        },
        {
          "slug": "primary-light",
          "color": "#dee2f1",
          "name": "Primaire Clair"
        },
        {
          "slug": "primary-dark",
          "color": "#0d1a4f",
          "name": "Primaire Foncé"
        },
        {
          "slug": "secondary",
          "color": "#ffde59",
          "name": "Secondaire"
        },
        {
          "slug": "secondary-light",
          "color": "#fff3b3",
          "name": "Secondaire Clair"
        },
        {
          "slug": "secondary-dark",
          "color": "#c9a600",
          "name": "Secondaire Foncé"
        },
        {
          "slug": "accent",
          "color": "#ff5959",
          "name": "Accent"
        },
        {
          "slug": "accent-light",
          "color": "#ffdede",
          "name": "Accent Clair"
        },
        {
          "slug": "accent-dark",
          "color": "#8b1f1f",
          "name": "Accent Foncé"
        },
        {
          "slug": "text",
          "color": "#222222",
          "name": "Texte"
        },
        {
          "slug": "text-light",
          "color": "#555555",
          "name": "Texte Clair"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "Blanc"
        },
        {
          "slug": "bg-light",
          "color": "#f6f8fa",
          "name": "Fond Clair"
        },
        {
          "slug": "bg-dark",
          "color": "#0b0b0b",
          "name": "Fond Foncé"
        }
      ],
      "gradients": [
        {
          "slug": "primary-gradient",
          "gradient": "linear-gradient(135deg, #1f3a8b 0%, #0d1a4f 100%)",
          "name": "Dégradé Primaire"
        },
        {
          "slug": "secondary-gradient",
          "gradient": "linear-gradient(135deg, #ffde59 0%, #c9a600 100%)",
          "name": "Dégradé Secondaire"
        },
        {
          "slug": "accent-gradient",
          "gradient": "linear-gradient(135deg, #ff5959 0%, #8b1f1f 100%)",
          "name": "Dégradé Accent"
        },
        {
          "slug": "primary-secondary",
          "gradient": "linear-gradient(135deg, #1f3a8b 0%, #ffde59 100%)",
          "name": "Primaire vers Secondaire"
        }
      ]
    },
    "typography": {
      "customFontSize": true,
      "dropCap": true,
      "fontStyle": true,
      "fontWeight": true,
      "letterSpacing": true,
      "lineHeight": true,
      "textDecoration": true,
      "textTransform": true,
      "fontFamilies": [
        {
          "fontFamily": "'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, sans-serif",
          "slug": "poppins",
          "name": "Poppins"
        }
      ],
      "fontSizes": [
        {
          "slug": "xs",
          "size": "0.75rem",
          "name": "Très Petit"
        },
        {
          "slug": "sm",
          "size": "0.875rem",
          "name": "Petit"
        },
        {
          "slug": "base",
          "size": "1rem",
          "name": "Normal"
        },
        {
          "slug": "lg",
          "size": "1.125rem",
          "name": "Grand"
        },
        {
          "slug": "xl",
          "size": "1.25rem",
          "name": "Très Grand"
        },
        {
          "slug": "2xl",
          "size": "1.5rem",
          "name": "2XL"
        },
        {
          "slug": "3xl",
          "size": "1.875rem",
          "name": "3XL"
        },
        {
          "slug": "4xl",
          "size": "2.25rem",
          "name": "4XL"
        },
        {
          "slug": "5xl",
          "size": "3rem",
          "name": "5XL"
        },
        {
          "slug": "6xl",
          "size": "3.75rem",
          "name": "6XL"
        }
      ]
    },
    "spacing": {
      "customSpacingSize": true,
      "spacingScale": {
        "steps": 0
      },
      "spacingSizes": [
        {
          "slug": "xs",
          "size": "0.25rem",
          "name": "XS"
        },
        {
          "slug": "sm",
          "size": "0.5rem",
          "name": "S"
        },
        {
          "slug": "md",
          "size": "1rem",
          "name": "M"
        },
        {
          "slug": "lg",
          "size": "1.5rem",
          "name": "L"
        },
        {
          "slug": "xl",
          "size": "2rem",
          "name": "XL"
        },
        {
          "slug": "2xl",
          "size": "3rem",
          "name": "2XL"
        },
        {
          "slug": "3xl",
          "size": "4rem",
          "name": "3XL"
        },
        {
          "slug": "4xl",
          "size": "6rem",
          "name": "4XL"
        },
        {
          "slug": "5xl",
          "size": "8rem",
          "name": "5XL"
        }
      ],
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "shadow": {
      "defaultPresets": false,
      "presets": [
        {
          "slug": "sm",
          "shadow": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
          "name": "Petite"
        },
        {
          "slug": "md",
          "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
          "name": "Moyenne"
        },
        {
          "slug": "lg",
          "shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
          "name": "Grande"
        },
        {
          "slug": "xl",
          "shadow": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
          "name": "Très Grande"
        },
        {
          "slug": "2xl",
          "shadow": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
          "name": "2XL"
        }
      ]
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": true
        },
        "color": {
          "background": true,
          "text": true
        },
        "spacing": {
          "padding": true
        }
      },
      "core/heading": {
        "color": {
          "text": true,
          "background": true
        },
        "typography": {
          "fontSizes": [],
          "fontWeight": true
        }
      },
      "core/paragraph": {
        "color": {
          "text": true,
          "background": true
        }
      },
      "core/columns": {
        "spacing": {
          "padding": true,
          "margin": true
        }
      },
      "core/group": {
        "spacing": {
          "padding": true,
          "margin": true
        },
        "color": {
          "background": true
        }
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--poppins)",
      "fontSize": "var(--wp--preset--font-size--base)",
      "fontWeight": "400",
      "lineHeight": "1.5"
    },
    "spacing": {
      "padding": {
        "top": "0",
        "right": "1.5rem",
        "bottom": "0",
        "left": "1.5rem"
      },
      "blockGap": "1.5rem"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--primary-dark)"
          },
          "typography": {
            "textDecoration": "underline"
          }
        },
        ":focus": {
          "color": {
            "text": "var(--wp--preset--color--primary-dark)"
          }
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--5-xl)",
          "fontWeight": "800",
          "lineHeight": "1.25"
        },
        "spacing": {
          "margin": {
            "bottom": "1.5rem"
          }
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--4-xl)",
          "fontWeight": "700",
          "lineHeight": "1.25"
        },
        "spacing": {
          "margin": {
            "bottom": "1.5rem"
          }
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--3-xl)",
          "fontWeight": "600",
          "lineHeight": "1.25"
        },
        "spacing": {
          "margin": {
            "bottom": "1.5rem"
          }
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--2-xl)",
          "fontWeight": "600",
          "lineHeight": "1.25"
        },
        "spacing": {
          "margin": {
            "bottom": "1.5rem"
          }
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xl)",
          "fontWeight": "500",
          "lineHeight": "1.25"
        },
        "spacing": {
          "margin": {
            "bottom": "1.5rem"
          }
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--lg)",
          "fontWeight": "500",
          "lineHeight": "1.25"
        },
        "spacing": {
          "margin": {
            "bottom": "1.5rem"
          }
        }
      },
      "button": {
        "border": {
          "radius": "1rem"
        },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--white)"
        },
        "spacing": {
          "padding": {
            "top": "0.75rem",
            "right": "1.5rem",
            "bottom": "0.75rem",
            "left": "1.5rem"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--base)",
          "fontWeight": "600"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--primary-dark)"
          }
        }
      }
    },
    "blocks": {
      "core/button": {
        "variations": {
          "outline": {
            "border": {
              "color": "var(--wp--preset--color--primary)",
              "style": "solid",
              "width": "2px"
            },
            "color": {
              "background": "transparent",
              "text": "var(--wp--preset--color--primary)"
            },
            ":hover": {
              "color": {
                "background": "var(--wp--preset--color--primary)",
                "text": "var(--wp--preset--color--white)"
              }
            }
          }
        }
      },
      "core/columns": {
        "spacing": {
          "margin": {
            "top": "2rem",
            "bottom": "2rem"
          }
        }
      },
      "core/group": {
        "spacing": {
          "padding": {
            "top": "3rem",
            "bottom": "3rem"
          }
        }
      },
      "core/separator": {
        "color": {
          "background": "var(--wp--preset--color--bg-light)"
        },
        "spacing": {
          "margin": {
            "top": "2rem",
            "bottom": "2rem"
          }
        }
      },
      "core/quote": {
        "border": {
          "color": "var(--wp--preset--color--secondary)",
          "style": "solid",
          "width": "0 0 0 4px"
        },
        "spacing": {
          "padding": {
            "left": "1.5rem"
          },
          "margin": {
            "top": "2rem",
            "bottom": "2rem"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xl)",
          "fontStyle": "italic"
        }
      },
      "core/pullquote": {
        "border": {
          "color": "var(--wp--preset--color--secondary)",
          "style": "solid",
          "width": "4px 0"
        },
        "spacing": {
          "padding": {
            "top": "2rem",
            "bottom": "2rem"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--2-xl)",
          "fontStyle": "italic",
          "fontWeight": "600"
        }
      },
      "core/list": {
        "spacing": {
          "padding": {
            "left": "1.5rem"
          }
        }
      }
    }
  },
  "customTemplates": [
    {
      "name": "landing-page",
      "title": "Landing Page",
      "postTypes": ["page"]
    },
    {
      "name": "formation",
      "title": "Formation",
      "postTypes": ["page"]
    },
    {
      "name": "offre",
      "title": "Offre / Service",
      "postTypes": ["page"]
    },
    {
      "name": "contact",
      "title": "Contact",
      "postTypes": ["page"]
    }
  ],
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}
